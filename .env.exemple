# =============================================================================
# CENTRALIZED CONFIGURATION - Environment Variables for All Services
# =============================================================================
# Copy this file to .env and adjust the values according to your needs
# =============================================================================

# -----------------------------------------------------------------------------
# DATABASE (PostgreSQL)
# -----------------------------------------------------------------------------
# PostgreSQL username
POSTGRES_USER=td_user

# PostgreSQL password ( Change in production ! )
POSTGRES_PASSWORD=td_password

# Database name
POSTGRES_DB=td_db

# PostgreSQL listening port
DB_PORT=5432

# -----------------------------------------------------------------------------
# API (Node.js + Express)
# -----------------------------------------------------------------------------

# --- Application ---
# External port to access the API from the host
API_PORT=3000

# Node.js environment (development, production, test)
NODE_ENV=development

# --- Database Pool ---
# Maximum number of simultaneous connections
DB_POOL_MAX=10

# Idle timeout before closing a connection (ms)
DB_POOL_IDLE_TIMEOUT=30000

# Database connection timeout (ms)
DB_POOL_CONNECTION_TIMEOUT=2000

# --- CORS ---
# Allowed origins (* for all, or comma-separated list)
CORS_ORIGIN=*

# Allow credentials (cookies, auth headers)
CORS_CREDENTIALS=true

# --- Logging ---
# Log level (ERROR, WARN, INFO, DEBUG)
LOG_LEVEL=INFO

# Human-readable format (true) or JSON (false)
LOG_PRETTY=true

# -----------------------------------------------------------------------------
# FRONTEND (Vue 3 + Vite + Nginx)
# -----------------------------------------------------------------------------
# External port to access the frontend from the host
FRONT_PORT=8080

# API URL for requests from the browser
VITE_API_URL=http://localhost:3000